mixin box-icon-modern(obj)
	article.box-icon-modern(class=obj.mod)&attributes(attributes)
		.box-icon-modern-icon(class=obj.icon)
		h4.box-icon-modern-title: a(href='#')=obj.title
		p.box-icon-modern-text=obj.text

mixin contacts-modern(obj)
	article.contacts-modern(modern=obj.mod)
		.contacts-modern-icon( class=obj.icon )
		ul.contacts-modern-list
			if( obj.address )
				each addressItem in obj.address
					li.contacts-modern-link: a( href='#' )!= addressItem.text
			else if( obj.tel )
				each telItem in obj.tel
					li.contacts-modern-link: a( href='tel:#' )= telItem.text
			else
				each mailItem in obj.mail
					li.contacts-modern-link: a( href='mailto:#' )= mailItem.text